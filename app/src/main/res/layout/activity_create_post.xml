<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="#00A55F5F"
    android:fadeScrollbars="true"
    android:focusable="auto"
    tools:context=".CreatePostActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/createOpportunityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"

                android:text="Creating an Opportunity"
                android:textSize="42sp"
                app:drawableTint="#FFFFFF" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:background="?android:attr/listDivider" />

            <!-- step 1 -->
            <LinearLayout
                android:id="@+id/step_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/stepOneImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/step_1" />

                <TextView
                    android:id="@+id/stepOneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:text="Name an Opportunity"
                    android:textSize="24sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/opportunityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="help plant trees"
                android:inputType="textPersonName"
                android:text="" />
            <!-- end of step 1 -->

            <!-- step 2 -->
            <LinearLayout
                android:id="@+id/step_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/stepTwoImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/step_2" />

                <TextView
                    android:id="@+id/stepTwoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:text="Your name"
                    android:textSize="24sp" />


            </LinearLayout>

            <EditText
                android:id="@+id/hostName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="your name"
                android:inputType="textPersonName"
                android:text="" />
            <!-- end of step 2 -->

            <!-- step 3 -->
            <LinearLayout
                android:id="@+id/step_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="19dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/stepThreeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/step_3" />

                <TextView
                    android:id="@+id/stepThreeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:text="Catagory"
                    android:textSize="24sp" />


            </LinearLayout>

            <!--Category containers -->
            <LinearLayout
                android:id="@+id/categories_container_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/category_environment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    app:srcCompat="@drawable/category_environment"
                    />

                <ImageButton
                    android:id="@+id/category_crafting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="1"
                    app:srcCompat="@drawable/category_crafting" />
            <!-- category containers -->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/categories_container_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/category_fundraisers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tint="#00FFFFFF"
                    app:srcCompat="@drawable/category_fundraisers" />

                <ImageButton
                    android:id="@+id/category_cleaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="1"
                    app:srcCompat="@drawable/category_cleaning" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/categories_container_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tint="#00FFFFFF"
                    app:srcCompat="@drawable/category_sports" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="1"
                    app:srcCompat="@drawable/category_recycling" />

            </LinearLayout>
            <!-- end of step 3 and category containers -->

            <!-- step 4 IDK what to do for location and sending the info to the map -->
            <LinearLayout
                android:id="@+id/step_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/stepFourImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/step_4" />

                <TextView
                    android:id="@+id/stepFourText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:text="Location"
                    android:textSize="24sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="your name"
                android:inputType="textPersonName"
                android:text="" />
            <!--end of step 4 -->

            <!-- step 5 -->
            <LinearLayout
                android:id="@+id/step_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/stepFiveImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/step_5" />

                <TextView
                    android:id="@+id/stepFiveText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:text="Description"
                    android:textSize="24sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="start|top"
                android:hint="tell people what they will be doing"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="57dp"
                android:layout_weight="1"
                android:text="Date:"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/dayTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="day"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/monthTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="month"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/yearTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="year"
                    android:inputType="date" />

            </LinearLayout>

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="57dp"
                android:text="Time"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/startTimeTextInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Start"
                    android:inputType="time" />


                <Switch
                    android:id="@+id/pmStartTimeSwitch"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="PM" />

                <EditText
                    android:id="@+id/endTimeTextInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="End"
                    android:inputType="time" />

                <Switch
                    android:id="@+id/pmEndTimeSwitch"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="PM" />
            </LinearLayout>



            <!--end of step 5 -->


        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>